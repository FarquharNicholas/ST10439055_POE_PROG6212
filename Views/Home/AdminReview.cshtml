@model IEnumerable<ST10439055_POE_PROG6212.Models.Claim>
@{
    ViewBag.Title = "Admin Review";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="fw-bold text-primary mb-1">Admin Review Dashboard</h2>
                <p class="text-muted">Review and approve lecturer claims</p>
            </div>
            <div class="d-flex gap-2">
                <span class="badge bg-warning fs-6">@Model.Count(c => c.Status == "Pending") Pending</span>
                <span class="badge bg-success fs-6">@Model.Count(c => c.Status == "Approved") Approved</span>
                <span class="badge bg-danger fs-6">@Model.Count(c => c.Status == "Rejected") Rejected</span>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var claim in Model)
                {
                    <div class="col-lg-6 col-xl-4 mb-4">
                        <div class="card h-100 admin-card @(claim.Status == "Pending" ? "border-warning" : claim.Status == "Approved" ? "border-success" : "border-danger")">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h6 class="mb-0 fw-bold">Claim #@claim.ClaimId</h6>
                                <span class="badge status-badge @(claim.Status == "Approved" ? "bg-success" : claim.Status == "Rejected" ? "bg-danger" : "bg-warning")">
                                    @claim.Status
                                </span>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <small class="text-muted">Lecturer</small>
                                        <div class="fw-semibold">@claim.Lecturer.FullName</div>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted">Department</small>
                                        <div class="fw-semibold">@claim.Lecturer.Department</div>
                                    </div>
                                </div>
                                
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <small class="text-muted">Month</small>
                                        <div class="fw-semibold">@claim.Month.ToString("MMMM yyyy")</div>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted">Email</small>
                                        <div class="fw-semibold text-truncate">@claim.Lecturer.Email</div>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-4">
                                        <small class="text-muted">Hours</small>
                                        <div class="fw-bold text-primary">@claim.HoursWorked</div>
                                    </div>
                                    <div class="col-4">
                                        <small class="text-muted">Rate</small>
                                        <div class="fw-bold">R @claim.Lecturer.HourlyRate.ToString("F2")</div>
                                    </div>
                                    <div class="col-4">
                                        <small class="text-muted">Total</small>
                                        <div class="fw-bold text-success">R @claim.TotalAmount.ToString("F2")</div>
                                    </div>
                                </div>

                                @if (claim.Status == "Pending")
                                {
                                    <div class="d-grid gap-2">
                                        <button class="btn btn-success btn-sm" onclick="approveClaim(@claim.ClaimId)">
                                            <i class="bi bi-check-circle me-1"></i>Approve
                                        </button>
                                        <button class="btn btn-danger btn-sm" onclick="rejectClaim(@claim.ClaimId)">
                                            <i class="bi bi-x-circle me-1"></i>Reject
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center">
                                        <small class="text-muted">Decision made</small>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <h5 class="mt-3 text-muted">No claims found</h5>
                <p class="text-muted">There are no claims to review at this time.</p>
            </div>
        }
    </div>
</div>

<!-- Approval Modal -->
<div class="modal fade" id="approvalModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Approve Claim</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="approvalForm" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to approve this claim?</p>
                    <div class="mb-3">
                        <label for="approvalRemarks" class="form-label">Remarks (Optional)</label>
                        <textarea class="form-control" id="approvalRemarks" name="remarks" rows="3" placeholder="Add any remarks about this approval..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle me-1"></i>Approve Claim
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Rejection Modal -->
<div class="modal fade" id="rejectionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reject Claim</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="rejectionForm" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to reject this claim?</p>
                    <div class="mb-3">
                        <label for="rejectionRemarks" class="form-label">Reason for Rejection</label>
                        <textarea class="form-control" id="rejectionRemarks" name="remarks" rows="3" placeholder="Please provide a reason for rejection..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-x-circle me-1"></i>Reject Claim
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function approveClaim(claimId) {
            document.getElementById('approvalForm').action = '@Url.Action("ApproveClaim")';
            document.getElementById('approvalForm').innerHTML += '<input type="hidden" name="claimId" value="' + claimId + '">';
            var modal = new bootstrap.Modal(document.getElementById('approvalModal'));
            modal.show();
        }

        function rejectClaim(claimId) {
            document.getElementById('rejectionForm').action = '@Url.Action("RejectClaim")';
            document.getElementById('rejectionForm').innerHTML += '<input type="hidden" name="claimId" value="' + claimId + '">';
            var modal = new bootstrap.Modal(document.getElementById('rejectionModal'));
            modal.show();
        }
    </script>
}
