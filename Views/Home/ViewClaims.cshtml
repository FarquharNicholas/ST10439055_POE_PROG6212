@model IEnumerable<ST10439055_POE_PROG6212.Models.Claim>
@{
    ViewBag.Title = "View Claims";
}

<div class="row">
    <div class="col-12">
        <div class="card p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="fw-bold text-primary">My Claims</h4>
                <a href="@Url.Action("SubmitClaim")" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Submit New Claim
                </a>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Month</th>
                                <th>Hours Worked</th>
                                <th>Hourly Rate</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th style="width:220px">Progress</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">#@claim.ClaimId</td>
                                    <td>@claim.Lecturer.FullName</td>
                                    <td>@claim.Month.ToString("MMMM yyyy")</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>R @claim.Lecturer.HourlyRate.ToString("F2")</td>
                                    <td class="fw-bold text-success">R @claim.TotalAmount.ToString("F2")</td>
                                    <td>
                                        <span id="status-badge-@claim.ClaimId" class="badge @(claim.Status == "Approved" ? "bg-success" : claim.Status == "Rejected" ? "bg-danger" : "bg-warning")">
                                            @claim.Status
                                        </span>
                                    </td>
                                    <td>
                                        <div class="progress" style="height: 10px;">
                                            @{
                                                var pct = claim.Status == "Approved" ? 100 : claim.Status == "Rejected" ? 100 : 50;
                                                var barClass = claim.Status == "Approved" ? "bg-success" : claim.Status == "Rejected" ? "bg-danger" : "bg-warning";
                                            }
                                            <div id="status-progress-@claim.ClaimId" class="progress-bar @barClass" role="progressbar" style="width: @pct%" aria-valuenow="@pct" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" onclick="viewClaimDetails(@claim.ClaimId)">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h5 class="mt-3 text-muted">No claims found</h5>
                    <p class="text-muted">You haven't submitted any claims yet.</p>
                    <a href="@Url.Action("SubmitClaim")" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Submit Your First Claim
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Claim Details Modal -->
<div class="modal fade" id="claimDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Claim Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="claimDetailsContent">
                <!-- Content will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script>
        function viewClaimDetails(claimId) {
            // This would typically load claim details via AJAX
            // For now, we'll show a simple message
            document.getElementById('claimDetailsContent').innerHTML = 
                '<p>Claim #' + claimId + ' details would be loaded here.</p>';
            
            var modal = new bootstrap.Modal(document.getElementById('claimDetailsModal'));
            modal.show();
        }

        // Real-time updates via SignalR
        (function() {
            const connection = new signalR.HubConnectionBuilder()
                .withUrl('/hubs/claimStatus')
                .withAutomaticReconnect()
                .build();

            connection.on('ClaimStatusChanged', function (claimId, newStatus) {
                const badge = document.getElementById('status-badge-' + claimId);
                if (!badge) return;
                badge.textContent = newStatus;
                badge.classList.remove('bg-success', 'bg-danger', 'bg-warning');
                if (newStatus === 'Approved') badge.classList.add('bg-success');
                else if (newStatus === 'Rejected') badge.classList.add('bg-danger');
                else badge.classList.add('bg-warning');

                const progress = document.getElementById('status-progress-' + claimId);
                if (progress) {
                    let pct = 50;
                    let cls = 'bg-warning';
                    if (newStatus === 'Approved') { pct = 100; cls = 'bg-success'; }
                    else if (newStatus === 'Rejected') { pct = 100; cls = 'bg-danger'; }
                    progress.style.width = pct + '%';
                    progress.setAttribute('aria-valuenow', pct.toString());
                    progress.classList.remove('bg-success', 'bg-danger', 'bg-warning');
                    progress.classList.add(cls);
                }
            });

            connection.start().catch(err => console.error(err));
        })();
    </script>
}
